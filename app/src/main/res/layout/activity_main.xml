<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_dark_blue"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="64dp"
        android:layout_height="match_parent">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"/>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:background="@color/transparent"
            android:layout_height="4dp" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="64dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:id="@+id/t1"
            android:layout_weight="1"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_bmi_24dp"
            android:text="@string/bmi"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:id="@+id/t2"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:visibility="gone"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_bmi_black_24dp"
            android:text="@string/bmi"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textStyle="bold"
            android:visibility="gone"
            android:id="@+id/t3"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_whatshot_24dp"
            android:text="@string/calorie"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:id="@+id/t4"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_whatshot_black_24dp"
            android:text="@string/calorie"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</RelativeLayout>